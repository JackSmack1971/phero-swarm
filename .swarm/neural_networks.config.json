{
  "//_comment": "Neural network configuration for pattern recognition, prediction, and intelligent decision making",
  "neuralNetworkArchitectures": {
    "patternRecognitionNetwork": {
      "networkType": "convolutional_neural_network",
      "architecture": {
        "inputLayer": {
          "inputSize": 256,
          "preprocessing": "text_vectorization"
        },
        "hiddenLayers": [
          {
            "type": "conv1d",
            "filters": 64,
            "kernelSize": 3,
            "activation": "relu",
            "padding": "same"
          },
          {
            "type": "max_pooling1d",
            "poolSize": 2
          },
          {
            "type": "conv1d", 
            "filters": 128,
            "kernelSize": 3,
            "activation": "relu",
            "padding": "same"
          },
          {
            "type": "global_average_pooling1d"
          },
          {
            "type": "dense",
            "units": 128,
            "activation": "relu",
            "dropout": 0.3
          },
          {
            "type": "dense",
            "units": 64,
            "activation": "relu",
            "dropout": 0.2
          }
        ],
        "outputLayer": {
          "units": 32,
          "activation": "softmax",
          "outputType": "pattern_classification"
        }
      },
      "trainingConfiguration": {
        "optimizer": "adam",
        "learningRate": 0.001,
        "lossFunction": "categorical_crossentropy",
        "metrics": ["accuracy", "precision", "recall"],
        "batchSize": 32,
        "epochs": 150,
        "validationSplit": 0.2,
        "callbacks": ["early_stopping", "reduce_lr_on_plateau"]
      }
    },
    "performancePredictionNetwork": {
      "networkType": "recurrent_neural_network",
      "architecture": {
        "inputLayer": {
          "sequenceLength": 24,
          "features": 16,
          "preprocessing": "time_series_normalization"
        },
        "hiddenLayers": [
          {
            "type": "lstm",
            "units": 128,
            "returnSequences": true,
            "dropout": 0.2,
            "recurrentDropout": 0.2
          },
          {
            "type": "lstm",
            "units": 64,
            "returnSequences": false,
            "dropout": 0.2,
            "recurrentDropout": 0.2
          },
          {
            "type": "dense",
            "units": 32,
            "activation": "relu",
            "dropout": 0.3
          }
        ],
        "outputLayer": {
          "units": 8,
          "activation": "linear",
          "outputType": "regression"
        }
      },
      "trainingConfiguration": {
        "optimizer": "rmsprop",
        "learningRate": 0.002,
        "lossFunction": "mean_squared_error",
        "metrics": ["mae", "mape"],
        "batchSize": 64,
        "epochs": 200,
        "validationSplit": 0.25
      }
    },
    "decisionIntelligenceNetwork": {
      "networkType": "transformer",
      "architecture": {
        "inputLayer": {
          "vocabularySize": 10000,
          "maxSequenceLength": 512,
          "embeddingDimension": 256
        },
        "transformerBlocks": [
          {
            "numHeads": 8,
            "keyDimension": 32,
            "feedForwardDimension": 512,
            "dropoutRate": 0.1
          },
          {
            "numHeads": 8,
            "keyDimension": 32,
            "feedForwardDimension": 512,
            "dropoutRate": 0.1
          }
        ],
        "outputLayer": {
          "poolingStrategy": "global_average_pooling",
          "denseUnits": 128,
          "outputUnits": 16,
          "activation": "softmax"
        }
      },
      "trainingConfiguration": {
        "optimizer": "adamw",
        "learningRate": 0.0001,
        "warmupSteps": 1000,
        "weightDecay": 0.01,
        "lossFunction": "sparse_categorical_crossentropy",
        "batchSize": 16,
        "epochs": 100
      }
    }
  },
  "trainingManagement": {
    "distributedTraining": {
      "enabled": false,
      "strategy": "mirrored_strategy",
      "numGpus": 1
    },
    "checkpointing": {
      "enabled": true,
      "saveFrequency": "epoch",
      "keepBestOnly": true,
      "monitorMetric": "val_accuracy",
      "mode": "max"
    },
    "tensorboardLogging": {
      "enabled": true,
      "logDirectory": "logs/neural_networks",
      "updateFrequency": "batch",
      "profileBatch": 0
    }
  },
  "inferenceOptimization": {
    "modelQuantization": {
      "enabled": true,
      "quantizationStrategy": "dynamic_quantization",
      "precision": "int8"
    },
    "modelPruning": {
      "enabled": false,
      "pruningRate": 0.2,
      "structuredPruning": true
    },
    "batchOptimization": {
      "dynamicBatching": true,
      "maxBatchSize": 128,
      "batchingTimeout": "5ms"
    }
  }
}
